{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#FF5C00",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#000000",
                    "name": "Secondary"
                },
                {
                    "slug": "accent",
                    "color": "#FF0099",
                    "name": "Accent"
                },
                {
                    "slug": "dark",
                    "color": "#000000",
                    "name": "Dark"
                },
                {
                    "slug": "light-text",
                    "color": "#444444",
                    "name": "Light Text"
                },
                {
                    "slug": "background",
                    "color": "#EEEEEE",
                    "name": "Background"
                },
                {
                    "slug": "white",
                    "color": "#FFFFFF",
                    "name": "White"
                },
                {
                    "slug": "success",
                    "color": "#00FF66",
                    "name": "Success"
                },
                {
                    "slug": "error",
                    "color": "#FF0000",
                    "name": "Error"
                }
            ],
            "gradients": [
                {
                    "slug": "primary-to-accent",
                    "gradient": "linear-gradient(135deg, #FF5C00 0%, #FF0099 100%)",
                    "name": "Primary to Accent"
                },
                {
                    "slug": "black-to-transparent",
                    "gradient": "linear-gradient(180deg, #000000 0%, transparent 100%)",
                    "name": "Black to Transparent"
                }
            ],
            "duotone": [
                {
                    "colors": [
                        "#FF5C00",
                        "#000000"
                    ],
                    "slug": "primary-black",
                    "name": "Primary and Black"
                }
            ],
            "customDuotone": false,
            "customGradient": true,
            "defaultGradients": false,
            "defaultPalette": false,
            "custom": true
        },
        "typography": {
            "dropCap": false,
            "fontFamilies": [
                {
                    "fontFamily": "'Arial Black', 'Impact', sans-serif",
                    "slug": "heading",
                    "name": "Heading"
                },
                {
                    "fontFamily": "'Courier New', monospace",
                    "slug": "body",
                    "name": "Body"
                },
                {
                    "fontFamily": "'Arial Black', sans-serif",
                    "slug": "price",
                    "name": "Price"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem",
                    "name": "Small"
                },
                {
                    "slug": "normal",
                    "size": "1rem",
                    "name": "Normal"
                },
                {
                    "slug": "medium",
                    "size": "1.25rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.5rem",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "2rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "xx-large",
                    "size": "3rem",
                    "name": "XX Large"
                }
            ],
            "customFontSize": true
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "blockGap": true,
            "units": [
                "px",
                "em",
                "rem",
                "%",
                "vh",
                "vw"
            ],
            "spacingSizes": [
                {
                    "slug": "xs",
                    "size": "0.25rem",
                    "name": "XS"
                },
                {
                    "slug": "sm",
                    "size": "0.5rem",
                    "name": "SM"
                },
                {
                    "slug": "md",
                    "size": "1rem",
                    "name": "MD"
                },
                {
                    "slug": "lg",
                    "size": "1.5rem",
                    "name": "LG"
                },
                {
                    "slug": "xl",
                    "size": "2rem",
                    "name": "XL"
                },
                {
                    "slug": "xxl",
                    "size": "3rem",
                    "name": "XXL"
                }
            ]
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "layout": {
            "contentSize": "1280px",
            "wideSize": "1440px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--dark)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--body)",
            "fontSize": "var(--wp--preset--font-size--normal)",
            "lineHeight": "1.6"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "3.5rem",
                    "fontWeight": "900",
                    "lineHeight": "1.1",
                    "textTransform": "uppercase"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "2.5rem",
                    "fontWeight": "900",
                    "lineHeight": "1.1",
                    "textTransform": "uppercase"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "1.5rem",
                    "fontWeight": "900",
                    "lineHeight": "1.1",
                    "textTransform": "uppercase"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "1.25rem",
                    "fontWeight": "900",
                    "lineHeight": "1.1",
                    "textTransform": "uppercase"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "1.1rem",
                    "fontWeight": "900",
                    "lineHeight": "1.1",
                    "textTransform": "uppercase"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "1rem",
                    "fontWeight": "900",
                    "lineHeight": "1.1",
                    "textTransform": "uppercase"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                "typography": {
                    "textDecoration": "none",
                    "fontWeight": "700"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--accent)"
                    },
                    "typography": {
                        "textDecoration": "underline"
                    }
                }
            },
            "button": {
                "border": {
                    "radius": "0"
                },
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--white)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "1.1rem",
                    "fontWeight": "900",
                    "textTransform": "uppercase"
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--dark)",
                        "text": "var(--wp--preset--color--white)"
                    }
                }
            }
        },
        "blocks": {
            "core/button": {
                "border": {
                    "width": "3px",
                    "style": "solid",
                    "color": "var(--wp--preset--color--dark)",
                    "radius": "0"
                },
                "spacing": {
                    "padding": {
                        "top": "0.75rem",
                        "right": "1.5rem",
                        "bottom": "0.75rem",
                        "left": "1.5rem"
                    }
                }
            },
            "core/heading": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "1rem"
                    }
                }
            },
            "core/paragraph": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "1rem"
                    }
                }
            },
            "core/list": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "1rem"
                    },
                    "padding": {
                        "left": "1.5rem"
                    }
                }
            },
            "core/quote": {
                "typography": {
                    "fontSize": "1.2rem",
                    "fontStyle": "italic"
                },
                "border": {
                    "left": {
                        "color": "var(--wp--preset--color--primary)",
                        "width": "4px",
                        "style": "solid"
                    }
                },
                "spacing": {
                    "padding": {
                        "left": "1.5rem"
                    },
                    "margin": {
                        "left": "0"
                    }
                }
            }
        }
    },
    "customTemplates": [
        {
            "name": "page-no-title",
            "title": "Page (No Title)",
            "postTypes": [
                "page"
            ]
        },
        {
            "name": "page-full-width",
            "title": "Page (Full Width)",
            "postTypes": [
                "page"
            ]
        },
        {
            "name": "page-contact",
            "title": "Contact Page",
            "postTypes": [
                "page"
            ]
        },
        {
            "name": "page-faq",
            "title": "FAQ Page",
            "postTypes": [
                "page"
            ]
        },
        {
            "name": "page-watch-builder.php",
            "title": "Watch Builder",
            "postTypes": [
                "page"
            ]
        }
    ],
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ]
}